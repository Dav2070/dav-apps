<div class="content container">
   <h1 align="center">Enter your new password</h1>
   <%= render 'layouts/messages' %>

   <%= form_tag(reset_password_path, class: "form-horizontal row mt-4", method: "post", role: "form") do |f| %>
      <div class="form-group row col-sm-10 offset-sm-1 col-lg-8 offset-lg-2">
         <%= label_tag :password, "Password", class: "col-sm-2 col-form-label" %>
         <div class="col-sm-10">
            <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
         </div>
      </div>
      <div class="form-group row col-sm-10 offset-sm-1 col-lg-8 offset-lg-2">
         <%= label_tag :password_confirmation, "Password confirmation", class: "col-sm-2 col-form-label" %>
         <div class="col-sm-10">
            <%= password_field_tag :password_confirmation, nil, class: "form-control", placeholder: "Confirm your password" %>
            <%= submit_tag("Save", class: "btn btn-primary btn-md mt-3") %>
         </div>
      </div>
   <% end %>
</div>