<div class="content container">
   <h1 align="center">Confirm your email</h1>
	<p align="center">Please enter your password to confirm your email address.</p>
	<%= render 'layouts/messages' %>

   <%= form_tag(confirm_user_path, class: "form-horizontal row mt-4", method: "post", role: "form") do |f| %>
      <div class="form-group row col-sm-10 offset-sm-1 col-lg-8 offset-lg-2">
         <%= label_tag :password, "Password", class: "col-sm-2 col-form-label" %>
         <div class="col-sm-10">
            <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
				<%= submit_tag("Send", class: "btn btn-primary btn-md mt-3") %>
         </div>
      </div>
   <% end %>
</div>