<div class="content controller">
   <h1 align="center">Login</h1>

   <form class="row mt-4">
      <%= form_tag(login_path, class: "form-horizontal", role: "form") do |f| %>
         <div class="form-group row col-sm-8 offset-sm-2 col-lg-6 offset-lg-3">
            <%= label_tag :email, "Email", class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
               <%= email_field_tag :email, nil, class: "form-control", placeholder: "Email" %>
            </div>
         </div>
         <div class="form-group row col-sm-8 offset-sm-2 col-lg-6 offset-lg-3">
            <%= label_tag :password, "Password", class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
               <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
               <%= submit_tag("Login", class: "btn btn-primary btn-md mt-3") %>
            </div>
         </div>
      <% end %>
   </form>
</div>